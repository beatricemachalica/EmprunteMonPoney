{% extends 'base.html.twig' %}

{% block title %}EmprunteMonPoney - Annonces
{% endblock %}

{% block body %}
	<div class="backgroundForm">

		{% block header %}
			{% include "smallHeader.html.twig" %}
		{% endblock %}

		<div class="littleForm">

			{% if editMode %}
				<h1 class="d-flex justify-content-center">Modifier mon annonce</h1>
			{% else %}
				<h1 class="d-flex justify-content-center">Ajouter une annonce</h1>
			{% endif %}

			{{ form_start(form) }}
			{{ form_row(form.text) }}
			{{ form_row(form.price) }}
			{# {{ form_row(form.category) }} #}
			<div class="text-white">
				{{ form_row(form.photo) }}
			</div>

			<div class="centerButton mt-20">
				<button class="btn btn-primary">Valider</button>
			</div>
			{{ form_end(form) }}

		</div>

		{% block footer %}
			{% include "smallFooter.html.twig" %}
		{% endblock %}

	</div>
{% endblock %}
