{% extends 'base.html.twig' %}

{% block title %}EmprunteMonPoney - Admin
{% endblock %}

{% block body %}

	{% block container %}

		{% block header %}
			{% include "admin/adminHeader.html.twig" %}
		{% endblock %}

		<div class="m-4">
			<div class="littleForm">

				{% if editMode %}
					<h1 class="d-flex justify-content-center">Modifier une activité</h1>
				{% else %}
					<h1 class="d-flex justify-content-center">Nouvelle activité équestre</h1>
				{% endif %}

				{{ form_start(form) }}
				{{ form_row(form.name) }}

				<div class="centerButton mt-4">
					<button class="btn btn-primary">Valider</button>
				</div>
				{{ form_end(form) }}

			</div>
		</div>
	{% endblock %}
{% endblock %}
