{% extends 'base.html.twig' %}

{% block title %}EmprunteMonPoney - Moncheval
{% endblock %}

{% block body %}

	<div class="backgroundForm">

		{% block header %}
			{% include "smallHeader.html.twig" %}
		{% endblock %}

		{% block container %}

			{# flash message #}
			{% for flashError in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}

			<div class="littleForm">
				{% if editMode %}
					<h1 class="d-flex justify-content-center">Modifier les informations</h1>
				{% else %}
					<h1 class="d-flex justify-content-center">Inscrire un cheval</h1>
				{% endif %}

				{{ form_start(form) }}
				{{ form_row(form.name) }}
				{{ form_row(form.breed) }}
				{{ form_row(form.size) }}
				{{ form_row(form.sex) }}
				{{ form_row(form.birthDate) }}
				{{ form_row(form.city) }}
				{{ form_row(form.cp) }}
				{{ form_row(form.departement) }}

				<div class="centerButton">
					{% if editMode %}
						<button type="submit" class="btn btn-primary mt-20">
							Modifier</button>
					{% else %}
						<button type="submit" class="btn btn-primary mt-20">
							Ajouter</button>
					{% endif %}

				</div>

				{{ form_end(form) }}

			</div>
		{% endblock %}

		{% block footer %}
			{% include "smallFooter.html.twig" %}
		{% endblock %}

	</div>

{% endblock %}
